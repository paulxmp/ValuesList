<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintEnd_toEndOf="parent"
        app:contentPadding="20dp"
        app:cardBackgroundColor="@color/grey"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/valuesCardviewImageview"
                android:layout_width="140dp"
                android:layout_height="112dp"
                android:contentDescription="Image for Value"
                tools:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/valuesCardviewNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/valuesCardviewImageview"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/valuesCardviewDescriptionTextView"
                android:textColor="@color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/valuesCardviewNameTextView"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/valuesCardviewImageview"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/valuesCardviewHandleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_reorder_grey_500_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>

